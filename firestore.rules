rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isTeam() {
      return request.auth != null; // TODO: endurecer con claims (e.g., request.auth.token.team == 'santabrisa')
    }

    // Memoria
    match /brain_memory/{userId} {
      allow read, write: if isTeam() && request.auth.uid != null;
      match /threads/{threadId}/turns/{turnId} {
        allow read, write: if isTeam();
      }
    }

    // SSOT b√°sico
    match /accounts/{id} { allow read, create, update: if isTeam(); }
    match /orders/{id} { allow read, create, update: if isTeam(); }
    match /interactions/{id} { allow read, create, update: if isTeam(); }
    match /events/{id} { allow read, create, update: if isTeam(); }

    // Productos (solo lectura)
    match /products/{id} { allow read: if isTeam(); }
  }
}
