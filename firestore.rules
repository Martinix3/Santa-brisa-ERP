
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Lectura por el equipo (ajusta según auth/claims)
    function isTeam() { return request.auth != null; }

    // Si el cliente no escribe colecciones SSOT, puedes permitir solo lectura básica:
    match /products/{id} { allow read: if isTeam(); }

    // Memoria si quieres leer desde cliente (opcional):
    match /brain_memory/{userId} {
      allow read: if isTeam(); // o limita al propio usuario
      allow write: if false;   // solo la Function escribe
      match /threads/{threadId}/turns/{turnId} {
        allow read: if isTeam();
        allow write: if false;
      }
    }

    // Colecciones SSOT escritas solo por Function → denegar al cliente:
    match /{col}/{id} where col in ['accounts','orders','interactions','events','plv_material','activations','shipments'] {
      allow read: if isTeam();
      allow write: if false;
    }
  }
}
